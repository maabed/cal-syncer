{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build",
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "tests", "**/*.test.ts", "build"]
}
